{
  "name": "connect-account",
  "version": "0.1.0",
  "private": true,
  "repository": "git@github.com:fewlinesco/connect-account.git",
  "scripts": {
    "dev": "next dev -p $CONNECT_ACCOUNT_PORT",
    "build": "next build",
    "lint": "eslint \"{src,pages}/**/*.{js,ts,jsx,tsx}\"",
    "start": "next start",
    "test": "jest",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "dependencies": {
    "@fwl/logging": "0.1.1",
    "@fwl/oauth2": "0.1.3",
    "@fwl/web": "0.4.1",
    "@sentry/browser": "5.24.2",
    "@sentry/node": "5.24.2",
    "apollo-link-context": "1.0.20",
    "apollo-link-http": "1.5.17",
    "graphql": "15.3.0",
    "graphql-tag": "2.11.0",
    "mongodb": "3.6.2",
    "next": "9.5.4-canary.23",
    "next-iron-session": "4.1.8",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "styled-components": "5.2.0",
    "swr": "0.3.5"
  },
  "devDependencies": {
    "@babel/core": "7.11.6",
    "@babel/plugin-transform-react-jsx": "7.10.4",
    "@fewlines/eslint-config": "3.0.0",
    "@hapi/iron": "6.0.0",
    "@storybook/addon-actions": "6.0.22",
    "@storybook/addon-essentials": "6.0.22",
    "@storybook/addon-links": "6.0.22",
    "@storybook/react": "6.0.22",
    "@types/enzyme": "3.10.7",
    "@types/enzyme-adapter-react-16": "1.0.6",
    "@types/jest": "26.0.14",
    "@types/mongodb": "3.5.27",
    "@types/node": "^14.11.2",
    "@types/react": "16.9.49",
    "@types/react-dom": "16.9.8",
    "@types/styled-components": "5.1.3",
    "@typescript-eslint/eslint-plugin": "4.3.0",
    "@typescript-eslint/parser": "4.3.0",
    "babel-jest": "26.3.0",
    "babel-loader": "8.1.0",
    "babel-plugin-styled-components": "1.11.1",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.5",
    "eslint": "7.10.0",
    "eslint-config-prettier": "6.12.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.21.2",
    "file-loader": "6.1.0",
    "husky": "4.3.0",
    "jest": "26.4.2",
    "jest-fetch-mock": "3.0.3",
    "jest-styled-components": "7.0.3",
    "prettier": "2.1.2",
    "react-is": "16.13.1",
    "ts-jest": "26.4.1",
    "ts-node": "9.0.0",
    "typescript": "4.0.3",
    "url-loader": "4.1.0"
  },
  "babel": {
    "env": {
      "production": {
        "presets": [
          [
            "next/babel",
            {
              "preset-env": {},
              "transform-runtime": {},
              "styled-jsx": {},
              "class-properties": {}
            }
          ]
        ],
        "plugins": [
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": true
            }
          ]
        ]
      },
      "development": {
        "presets": [
          [
            "next/babel",
            {
              "preset-env": {},
              "transform-runtime": {},
              "styled-jsx": {},
              "class-properties": {}
            }
          ]
        ],
        "plugins": [
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": true
            }
          ]
        ]
      },
      "test": {
        "presets": [
          "next/babel"
        ],
        "plugins": [
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": true
            }
          ],
          "@babel/plugin-transform-react-jsx"
        ]
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "@fewlines/eslint-config/node",
      "@fewlines/eslint-config/react",
      "@fewlines/eslint-config/typescript",
      "@fewlines/eslint-config/react-typescript"
    ],
    "rules": {
      "@typescript-eslint/camelcase": "off",
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "@typescript-eslint/explicit-function-return-type": [
        "error",
        {
          "allowExpressions": true
        }
      ],
      "import/order": [
        "error",
        {
          "alphabetize": {
            "order": "asc",
            "caseInsensitive": false
          },
          "newlines-between": "always",
          "groups": [
            [
              "builtin",
              "external"
            ],
            [
              "internal",
              "parent",
              "sibling",
              "index"
            ]
          ],
          "pathGroups": [
            {
              "pattern": "@src/**",
              "group": "internal"
            },
            {
              "pattern": "@lib/**",
              "group": "internal"
            }
          ],
          "pathGroupsExcludedImportTypes": [
            "builtin"
          ]
        }
      ]
    }
  },
  "jest": {
    "preset": "ts-jest",
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx",
      "json"
    ],
    "unmockedModulePathPatterns": [
      "node_modules/react/",
      "node_modules/enzyme/"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "babel-jest"
    },
    "moduleDirectories": [
      "node_modules",
      "config"
    ],
    "moduleNameMapper": {
      "\\.(png|svg|jpg|gif|eot|ttf|woff|woff2)$": "<rootDir>/tests/__mocks__/fileMock.ts",
      "@src/(.*)": "<rootDir>/src/$1",
      "@lib/(.*)": "<rootDir>/lib/$1"
    },
    "setupFilesAfterEnv": [
      "./tests/config/enzyme-config.ts"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn lint && yarn test && yarn build"
    }
  }
}
